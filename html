  <div id="notification" class="notification"></div>

  <script>
    // Global variables
    let selectedPaymentMethod = 'online';
    let orderAmount = 0;
    
    // Floating WhatsApp
    function openWhatsApp(){
      const phone="+916202819125";
      const message="Hello, I want to inquire about PVC card printing services.";
      window.open(`https://wa.me/${phone}?text=${encodeURIComponent(message)}`,"_blank");
    }
    
    // Navigation
    function openNavigation(){
      window.open("https://www.google.com/maps/dir//Mujauna+Parsa,+Saran,+Bihar+841219","_blank");
    }
    
    // Scroll
    function scrollToSection(id){document.getElementById(id).scrollIntoView({behavior:"smooth"});}
    
    // Select card
    function selectCardType(type){
      document.getElementById("cardType").value=type;
      updatePrice();
      scrollToSection("form-section");
    }
    
    // Update price based on selection
    function updatePrice() {
      const cardType = document.getElementById("cardType");
      const quantity = document.getElementById("quantity");
      const selectedOption = cardType.options[cardType.selectedIndex];
      const price = parseInt(selectedOption.getAttribute('data-price'));
      const qty = parseInt(quantity.value);
      
      orderAmount = price * qty;
      
      // Update summary
      document.getElementById("summary-card-type").textContent = cardType.value;
      document.getElementById("summary-card-price").textContent = price;
      document.getElementById("summary-quantity").textContent = qty;
      document.getElementById("summary-total").textContent = orderAmount;
    }
    
    // File Upload
    const fileInput=document.getElementById("pdfFile");
    const fileName=document.getElementById("fileName");
    const fileUploadContainer=document.getElementById("fileUploadContainer");
    const progressBar=document.querySelector(".progress-bar");
    const fileProgress=document.getElementById("fileProgress");
    
    fileInput.addEventListener("change",()=>{
      if(fileInput.files.length>0){
        fileName.textContent=fileInput.files[0].name;
        progressBar.style.display="block";
        fileProgress.style.width="0";
        setTimeout(()=>{fileProgress.style.width="100%";},100);
      }else{fileName.textContent="No file chosen";progressBar.style.display="none";}
    });
    
    fileUploadContainer.addEventListener("dragover",(e)=>{e.preventDefault();fileUploadContainer.classList.add("dragover");});
    fileUploadContainer.addEventListener("dragleave",()=>{fileUploadContainer.classList.remove("dragover");});
    fileUploadContainer.addEventListener("drop",(e)=>{
      e.preventDefault();
      fileUploadContainer.classList.remove("dragover");
      const file=e.dataTransfer.files[0];
      if(file){
        fileInput.files=e.dataTransfer.files;
        fileName.textContent=file.name;
        progressBar.style.display="block";
        fileProgress.style.width="0";
        setTimeout(()=>{fileProgress.style.width="100%";},100);
      }
    });
    
    // Validate form before proceeding to payment
    function validateForm() {
      const customerName=document.getElementById("customerName").value;
      const customerNumber=document.getElementById("customerNumber").value;
      const cardType=document.getElementById("cardType").value;
      const quantity=document.getElementById("quantity").value;
      const file=fileInput.files[0];
      
      if(!customerName || !customerNumber || !cardType || cardType === "" || !quantity || !file) {
        showNotification("Please fill all required fields before proceeding.", "error");
        return;
      }
      
      if(orderAmount <= 0) {
        showNotification("Please select a valid card type.", "error");
        return;
      }
      
      // Show payment section
      document.getElementById("form-section").style.display = "none";
      document.getElementById("payment-section").style.display = "block";
      scrollToSection("payment-section");
    }
    
    // Back to form from payment
    function backToForm() {
      document.getElementById("payment-section").style.display = "none";
      document.getElementById("form-section").style.display = "block";
      scrollToSection("form-section");
    }
    
    // Select payment method
    function selectPayment(method) {
      selectedPaymentMethod = method;
      const options = document.querySelectorAll('.payment-option');
      options.forEach(opt => opt.classList.remove('selected'));
      
      if(method === 'online') {
        options[0].classList.add('selected');
        document.getElementById("pay-button").innerHTML = '<i class="fas fa-lock"></i> Pay Now';
      } else {
        options[1].classList.add('selected');
        document.getElementById("pay-button").innerHTML = '<i class="fab fa-whatsapp"></i> Confirm Order';
      }
    }
    
    // Process payment based on selected method
    function processPayment() {
      if(selectedPaymentMethod === 'online') {
        initiateRazorpayPayment();
      } else {
        submitOrderViaWhatsApp();
      }
    }
    
    // Initiate Razorpay payment
    function initiateRazorpayPayment() {
      const customerName=document.getElementById("customerName").value;
      const customerNumber=document.getElementById("customerNumber").value;
      const customerEmail=document.getElementById("customerEmail").value;
      const cardType=document.getElementById("cardType").value;
      const quantity=document.getElementById("quantity").value;
      const instructions=document.getElementById("instructions").value;
      const file=fileInput.files[0];
      
      // Razorpay API Key (Replace with your actual key)
      const razorpayKey = "rzp_live_RH7DPL7LtFs1WG";
      
      const options = {
        "key": razorpayKey,
        "amount": orderAmount * 100, // Amount in paise
        "currency": "INR",
        "name": "Cyber Cafe PVC Printing",
        "description": `Order for ${cardType} (Qty: ${quantity})`,
        "image": "https://cdn-icons-png.flaticon.com/512/3049/3049428.png",
        "handler": function(response) {
          // Payment success handler
          showNotification("Payment successful! Order confirmed.", "success");
          
          // Submit order details via WhatsApp
          submitOrderViaWhatsApp(response.razorpay_payment_id);
        },
        "prefill": {
          "name": customerName,
          "email": customerEmail,
          "contact": customerNumber
        },
        "notes": {
          "card_type": cardType,
          "quantity": quantity,
          "instructions": instructions
        },
        "theme": {
          "color": "#1a2a6c"
        }
      };
      
      const rzp = new Razorpay(options);
      rzp.open();
      
      rzp.on('payment.failed', function(response){
        showNotification("Payment failed. Please try again.", "error");
        console.error(response.error);
      });
    }
    
    // Submit order via WhatsApp
    function submitOrderViaWhatsApp(paymentId = null) {
      const customerName=document.getElementById("customerName").value;
      const customerNumber=document.getElementById("customerNumber").value;
      const customerEmail=document.getElementById("customerEmail").value;
      const cardType=document.getElementById("cardType").value;
      const quantity=document.getElementById("quantity").value;
      const instructions=document.getElementById("instructions").value;
      const file=fileInput.files[0];
      
      let message=`New PVC Card Order:\n\nName: ${customerName}\nMobile: ${customerNumber}\nEmail: ${customerEmail}\nCard Type: ${cardType}\nQuantity: ${quantity}\nTotal Amount: ₹${orderAmount}`;
      
      if(paymentId) {
        message += `\nPayment ID: ${paymentId}\nPayment Status: Completed`;
      } else {
        message += `\nPayment Method: Pay via WhatsApp`;
      }
      
      message += `\nInstructions: ${instructions}\n\nFile: ${file.name}\n\nLocation: Mujauna Parsa, Saran, Bihar 841219`;
      
      const phone="+916202819125";
      const whatsappURL=`https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
      
      document.getElementById("pay-button").style.display="none";
      document.getElementById("loadingIndicator").style.display="block";
      
      setTimeout(()=>{
        document.getElementById("loadingIndicator").style.display="none";
        document.getElementById("thankYouMsg").style.display="block";
        window.open(whatsappURL,"_blank");
        
        // Reset form
        document.getElementById("pvcForm").reset();
        fileName.textContent="No file chosen";
        progressBar.style.display="none";
        
        // Show form again after success
        setTimeout(()=>{
          document.getElementById("thankYouMsg").style.display="none";
          document.getElementById("pay-button").style.display="flex";
          document.getElementById("payment-section").style.display = "none";
          document.getElementById("form-section").style.display = "block";
          scrollToSection("form-section");
        },5000);
      },2000);
    }
    
    // Notifications
    function showNotification(msg,type){
      const notification=document.getElementById("notification");
      notification.textContent=msg;
      notification.className="notification "+type;
      setTimeout(()=>{notification.className="notification";},3000);
    }
    
    // Initialize price on page load
    document.addEventListener('DOMContentLoaded', function() {
      updatePrice();
    });
  </script>
